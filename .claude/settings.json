{
  "temperature": 0.7,
  "maxTokens": 8192,
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bun run .claude/tools/hooks/session-start.ts"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bun run .claude/tools/hooks/pre-tool-use.ts"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bun run .claude/tools/hooks/stop.ts"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "Task",
      "TodoWrite"
    ],
    "deny": [
      "Read(~/.env)",
      "Read(~/.env.*)",
      "Read(~/.aws/**)",
      "Read(~/.ssh/**)",
      "Write(~/**)",
      "Edit(~/**)"
    ],
    "ask": [
      "Bash(git push*)",
      "Bash(npm publish*)",
      "Bash(rm -rf*)",
      "WebFetch"
    ]
  },
  "env": {
    "CLAUDE_PROJECT_DIR": "/Users/rodrigocanoteran/projects/pal-framework",
    "PROJECT_NAME": "pal-framework"
  },
  "alwaysThinkingEnabled": false,
  "sandbox": {
    "enabled": true,
    "excludedCommands": []
  },
  "preferences": {
    "packageManager": "bun",
    "pythonPackageManager": "uv",
    "preferTypeScript": true,
    "autoCommit": false,
    "verboseLogging": false
  },
  "$schema": "https://json.schemastore.org/claude-code-settings.json"
}